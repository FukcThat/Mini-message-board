<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <h1><%= title %></h1>
    <a href="/new"> + Message</a>

    <ul>
      <% messages.forEach((msg, index) => { %>
      <li>
        <strong><%= msg.user || "Anonymous" %>:</strong> <%= msg.text %> <br />
        <small> <%= msg.added.toLocaleString() %></small>
        <br />
        <a href="/message/<%= index %>">Open</a>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
